<view class="content"><block wx:if="{{list.length!=0}}"><view class="header"><view class="header-left"><text class="active-text">{{text}}</text><text>{{listData.length+"条"}}</text></view><view class="header-right"><view data-event-opts="{{[['tap',[['tab',[0]]]]]}}" class="{{['header-right-item ',(activeIndex===0)?'active-tab':'']}}" bindtap="__e">全部</view><view data-event-opts="{{[['tap',[['tab',[1]]]]]}}" class="{{['header-right-item',(activeIndex===1)?'active-tab':'']}}" bindtap="__e">待办</view><view data-event-opts="{{[['tap',[['tab',[2]]]]]}}" class="{{['header-right-item',(activeIndex===2)?'active-tab':'']}}" bindtap="__e">已完成</view></view></view></block><block wx:if="{{list.length==0}}"><view class="default"><view class="image-default"><text class="iconfont icon-list1152921easyiconnet" style="font-size:200px;opacity:0.1;justify-content:center;"></text></view><view class="default-info"><view class="default-info-text">您还没有创建任何待办事项</view><view class="default-info-text">点击下方“+”创建</view></view></view></block><block wx:else><view class="todo-content"><block wx:for="{{listData}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['finish',['$0'],[[['listData','',index,'id']]]]]]]}}" class="{{['todo-list',(item.checked)?'todo-finish':'']}}" bindtap="__e"><view class="todo-list-checkbox"><view class="checkbox"></view></view><view class="todo-list-content">{{''+item.content+''}}</view></view></block></view></block><view data-event-opts="{{[['tap',[['create',['$event']]]]]}}" class="create-todo" bindtap="__e"><text class="iconfont icon-add"></text></view><block wx:if="{{active}}"><view class="create-content"><view class="create-input"><input type="text" placeholder="请输入要增加的待办事项" data-event-opts="{{[['input',[['__set_model',['','value','$event',[]]]]]]}}" value="{{value}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['add',['$event']]]]]}}" class="create-button" bindtap="__e">创建</view></view></block></view>